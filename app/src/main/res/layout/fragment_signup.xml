<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signup_headText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#181829"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/signup_name_editText"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="#e1e1e1"
            android:hint="Full Name"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_headText" />

        <EditText
            android:id="@+id/signup_email_editText"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="#e1e1e1"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_name_editText" />

        <EditText
            android:id="@+id/signup_phone_editText"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="#e1e1e1"
            android:hint="Phone Number"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_email_editText" />

        <EditText
            android:id="@+id/signup_pw_editText"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="#e1e1e1"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_phone_editText" />

        <EditText
            android:id="@+id/signup_pw_check_editText"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="#e1e1e1"
            android:hint="Password Check"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_editText" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="17dp"
            android:text="회원가입"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="@id/signup_pw_check_editText"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_check_editText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>